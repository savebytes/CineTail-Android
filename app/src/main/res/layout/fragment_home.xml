<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_bg">

        <include
            android:id="@+id/demoLayout"
            layout="@layout/layout_headline_card"
            android:layout_marginTop="50.dp"
            android:layout_height="320.dp"
            android:layout_width="320.dp"
            android:layout_marginHorizontal="20.dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/demoLayout2"
            layout="@layout/layout_item_card"
            android:layout_marginTop="19dp"
            android:layout_height="250.dp"
            android:layout_width="110.dp"
            android:layout_marginHorizontal="20.dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/demoLayout"/>

        <include
            android:id="@+id/demoLayout3"
            layout="@layout/layout_actor_card"
            android:layout_marginTop="19dp"
            android:layout_height="150.dp"
            android:layout_width="150.dp"
            android:layout_marginHorizontal="20.dp"
            app:layout_constraintStart_toEndOf="@+id/demoLayout2"
            app:layout_constraintTop_toTopOf="@+id/demoLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/demoLayout2"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

